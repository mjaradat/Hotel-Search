<div class="header clearfix">
    <h3 class="text-muted">Search Hotel Offeres</h3>
</div>

<div class="row">
    <div class="col-lg-12">
        {{#if errors}} 
            {{#each errors}}
                <div class="alert alert-danger">{{this}}</div>
            {{/each}} 
        {{/if}}
        {{#unless errors}}
            <h3>{{destinationName}} : {{resultLength}} result search</h3> 
        {{/unless}}
        {{#if result}} 
            {{#each result.offers.Hotel}}
            <div class="wrapper">
                <div class="icon">
                    <img src="{{this.hotelInfo.hotelImageUrl}}" />
                </div>
                <div class="content">
                    <h4>{{this.hotelInfo.hotelName}}</h4>

                    <div class="row">
                        <div class="col-lg-3">
                            <p>Hotel Star Rating:</p>
                        </div>
                        <div class="col-lg-2">
                            <p>{{this.hotelInfo.hotelStarRating}}</p>
                        </div>

                        <div class="col-lg-5">
                            <p>Hotel Guest Review Rating:</p>
                        </div>

                        <div class="col-lg-1">
                            <p>{{this.hotelInfo.hotelGuestReviewRating}}</p>
                        </div>

                    </div>
                    <p>{{this.hotelInfo.hotelDestination}}</p>
                </div>
            </div>
            {{/each}}
        {{/if}}
    </div>
</div>